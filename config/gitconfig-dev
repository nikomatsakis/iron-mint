# Iron Mint Git Configuration for ~/dev directory

[user]
    name = Niko Matsakis
    email = niko@alum.mit.edu

[core]
    editor = ~/dev/iron-mint/bin/git-editor
    autocrlf = input

[init]
    defaultBranch = main

[pull]
    rebase = true

[merge]
    conflictstyle = diff3

[alias]
    st = status
    co = checkout
    br = branch
    ci = commit
    unstage = reset HEAD --
    last = log -1 HEAD
