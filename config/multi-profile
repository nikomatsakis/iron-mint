# Iron Mint Profile Configuration
# This file is sourced by ~/.zprofile or ~/.bash_profile when Iron Mint is installed
# Works with both zsh and bash login shells

# Cargo (Rust) - ensure available in login shells
if [ -d "$HOME/.cargo/bin" ]; then
    export PATH="$HOME/.cargo/bin:$PATH"
fi

# Volta (Node.js) - ensure available in login shells
if [ -d "$HOME/.volta" ]; then
    export VOLTA_HOME="$HOME/.volta"
    export PATH="$VOLTA_HOME/bin:$PATH"
fi
